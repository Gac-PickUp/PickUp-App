<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/centre_background"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:padding="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Title"
                        style="@style/modifiedEditText"
                        android:id="@+id/titleText"

                        android:padding="20dp"
                        android:textSize="15dp"
                        android:textColor="#5b7b7d"
                        android:background="?attr/editTextBackground"

                        >

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/sportText"
                        android:text="Sport"
                        style="@style/modifiedEditText"
                        android:padding="20dp"
                        android:textSize="15dp"
                        android:textColor="#5b7b7d"
                        android:background="?attr/editTextBackground"
                        >

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Location"
                        android:id="@+id/locationText"
                        style="@style/modifiedEditText"
                        android:padding="20dp"
                        android:textSize="15dp"
                        android:textColor="#5b7b7d"
                        android:background="?attr/editTextBackground">


                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Date"
                        style="@style/modifiedEditText"
                        android:padding="20dp"
                        android:id="@+id/dateText"
                        android:textSize="15dp"
                        android:textColor="#5b7b7d"
                        android:background="?attr/editTextBackground">


                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Current Player Count: "
                        style="@style/modifiedEditText"
                        android:padding="20dp"
                        android:textSize="15dp"
                        android:id="@+id/actualPlayerCountText"
                        android:textColor="#5b7b7d"
                        android:background="?attr/editTextBackground">


                    </TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:backgroundTint="@null"
                            android:background="@drawable/centre_button"
                            android:text="Join Game"
                            android:id="@+id/joinGameButton"
                            android:inputType="text"
                            android:typeface="normal"
                            >


                        </Button>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:backgroundTint="@null"
                            android:layout_marginLeft="46dp"
                            android:background="@drawable/leave_button"
                            android:text="Leave Game"
                            android:id="@+id/leaveGameButton"
                            android:inputType="text"
                            android:typeface="normal"
                            >

                        </Button>
                    </LinearLayout>

                </LinearLayout>







            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>



</RelativeLayout>