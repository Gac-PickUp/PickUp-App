<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/create_game_gradient">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Example Title"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/titleText"
        >


    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        android:layout_marginEnd="300dp"
        android:layout_marginStart="20dp"
        android:text="Location"
        android:id="@+id/locationText">

    </TextView>

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        app:layout_constraintLeft_toRightOf="@id/locationText"
        android:text="date"
        android:id="@+id/dateText"
        >

    </TextView>

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintLeft_toRightOf="@id/dateText"
        android:text="time"
        android:id="@+id/timeText"
        >

    </TextView>

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/locationText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Current Player count:"
        android:id="@+id/playerCountText">

    </TextView>

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/playerCountText"
        app:layout_constraintTop_toTopOf="@id/playerCountText"
        android:hint="7/10">


    </TextView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/playerCountText"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="230dp"
        android:layout_marginStart="50dp"
        android:backgroundTint="#99D98C"
        android:textColor="@color/black"
        android:text="Join Game"
        android:id="@+id/joinGameButton"
        >


    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="230dp"
        app:layout_constraintTop_toTopOf="@id/joinGameButton"
        app:layout_constraintLeft_toRightOf="@id/joinGameButton"
        android:backgroundTint="#D2042D"
        android:text="Leave Game"
        android:textColor="@color/black"
        >

    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="back"
        android:drawableLeft="@drawable/baseline_arrow_back_24"
        android:backgroundTint="#99D98C"
        android:textColor="@color/black"
        >

    </Button>



</androidx.constraintlayout.widget.ConstraintLayout>