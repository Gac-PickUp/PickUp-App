<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".GameDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="24sp"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        />



    <TextView
        android:id="@+id/sportTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sport"
        android:textSize="18sp"
        android:layout_below="@id/locationTextView"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
       />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="18sp"
        android:layout_below="@id/sportTextView"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
       />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="18sp"
        android:layout_below="@id/dateTextView"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
      />

    <TextView
        android:id="@+id/minPlayersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min Players"
        android:textSize="18sp"
        android:layout_below="@id/timeTextView"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
      />

    <TextView
        android:id="@+id/maxPlayersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Players"
        android:textSize="18sp"
        android:layout_below="@id/minPlayersTextView"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/teamTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team"
        android:textSize="18sp"
        android:layout_below="@id/maxPlayersTextView"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
      />





</RelativeLayout>
