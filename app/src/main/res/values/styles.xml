<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_animation</item>
        <item name="android:windowExitAnimation">@anim/dialog_animation</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--  Customize your theme here.  -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="modifiedEditText">
        <item name="android:backgroundTint">@color/primaryTextColor</item>
    </style>

    <style name="modifiedTextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="paddingEnd">30dp</item>
        <item name="paddingStart">30dp</item>
    </style>

</resources>